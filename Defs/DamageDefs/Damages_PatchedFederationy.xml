<?xml version="1.0" encoding="utf-8" ?>
<Defs>
 
  <DamageDef>
    <defName>Optic</defName>
    <label>energy</label>
    <workerClass>DamageWorker_AddInjury</workerClass>
    <externalViolence>true</externalViolence>
    <isExplosive>true</isExplosive>
    <deathMessage>{0} has been shot to death.</deathMessage>
    <hediff>Burn</hediff>
    <harmAllLayersUntilOutside>true</harmAllLayersUntilOutside>
    <impactSoundType>Blunt</impactSoundType>
    <armorCategory>Heat</armorCategory>
    <minDamageToFragment>15</minDamageToFragment>
    <defaultDamage>3</defaultDamage>
    <buildingDamageFactor>3</buildingDamageFactor>
    <plantDamageFactor>3</plantDamageFactor>
    <explosionAffectOutsidePartsOnly>false</explosionAffectOutsidePartsOnly>
    <explosionHeatEnergyPerCell>5</explosionHeatEnergyPerCell>
    <explosionCellMote>Mote_BlastOptic</explosionCellMote>
    <explosionColorCenter>(1, 0.5, 0.3)</explosionColorCenter>
    <explosionColorEdge>(0.6, 0.5, 0.4)</explosionColorEdge>
    <soundExplosion>Explosion_OpticBurst</soundExplosion>
    <combatLogRules>Damage_Flame</combatLogRules>
    <modExtensions>
      <li Class="CombatExtended.DamageDefExtensionCE">
        <isAmbientDamage>true</isAmbientDamage>
      </li>
    </modExtensions>	
  </DamageDef>
  
  <DamageDef>
    <defName>Plasma</defName>
    <label>plasma</label>
    <workerClass>DamageWorker_AddInjury</workerClass>
    <externalViolence>true</externalViolence>
    <isExplosive>true</isExplosive>
    <deathMessage>{0} has been melted.</deathMessage>
    <hediff>Burn</hediff>
    <harmAllLayersUntilOutside>true</harmAllLayersUntilOutside>
    <impactSoundType>Blunt</impactSoundType>
    <armorCategory>Heat</armorCategory>
    <minDamageToFragment>15</minDamageToFragment>
    <defaultDamage>8</defaultDamage>
    <buildingDamageFactor>8</buildingDamageFactor>
    <plantDamageFactor>5</plantDamageFactor>
    <explosionAffectOutsidePartsOnly>false</explosionAffectOutsidePartsOnly>
    <explosionHeatEnergyPerCell>5</explosionHeatEnergyPerCell>
    <explosionCellMote>Mote_BlastPlasma</explosionCellMote>
    <explosionColorCenter>(1, 0.5, 0.3)</explosionColorCenter>
    <explosionColorEdge>(0.6, 0.5, 0.4)</explosionColorEdge>
    <soundExplosion>Explosion_PlasmaEXP</soundExplosion>
    <combatLogRules>Damage_Flame</combatLogRules>
    <modExtensions>
      <li Class="CombatExtended.DamageDefExtensionCE">
        <isAmbientDamage>true</isAmbientDamage>
      </li>
    </modExtensions>	
  </DamageDef>
  

</Defs>