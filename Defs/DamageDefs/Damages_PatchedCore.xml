<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
  <DamageDef>
    <defName>Microwave</defName>
    <workerClass>DamageWorker_Flame</workerClass>
    <label>microwave</label>
    <hasForcefulImpact>false</hasForcefulImpact>
    <makesBlood>false</makesBlood>
    <canInterruptJobs>false</canInterruptJobs>
    <externalViolence>true</externalViolence>
    <deathMessage>{0} has burned alive.</deathMessage>
    <hediff>Burn</hediff>
    <armorCategory>Heat</armorCategory>
    <minDamageToFragment>15</minDamageToFragment>
    <defaultDamage>1</defaultDamage>
    <explosionHeatEnergyPerCell>1</explosionHeatEnergyPerCell>
    <explosionCellMote>Mote_BlastMicrowave</explosionCellMote>
    <explosionColorCenter>(1, 0.7, 0.7)</explosionColorCenter>
    <explosionColorEdge>(1, 1, 0.7)</explosionColorEdge>
    <soundExplosion>RS_ShotBoreas</soundExplosion>
    <combatLogRules>Damage_Flame</combatLogRules>
    <makesAnimalsFlee>true</makesAnimalsFlee>
    <canUseDeflectMetalEffect>false</canUseDeflectMetalEffect>
    <modExtensions>
      <li Class="CombatExtended.DamageDefExtensionCE">
        <isAmbientDamage>true</isAmbientDamage>
      </li>
    </modExtensions>	
  </DamageDef>
  
    <DamageDef>
    <defName>KineticImpact</defName>
    <label>kinetic impact</label>
    <workerClass>DamageWorker_AddInjury</workerClass>
    <externalViolence>true</externalViolence>
    <isExplosive>true</isExplosive>
    <deathMessage>{0} has been crushed to death.</deathMessage>
    <hediff>Shredded</hediff>
    <hediffSolid>Crack</hediffSolid>
    <harmAllLayersUntilOutside>true</harmAllLayersUntilOutside>
    <impactSoundType>Blunt</impactSoundType>
    <armorCategory>Blunt</armorCategory>
    <minDamageToFragment>15</minDamageToFragment>
    <defaultDamage>5</defaultDamage>
    <buildingDamageFactor>2</buildingDamageFactor>
    <plantDamageFactor>2</plantDamageFactor>
    <explosionAffectOutsidePartsOnly>false</explosionAffectOutsidePartsOnly>
    <explosionHeatEnergyPerCell>5</explosionHeatEnergyPerCell>
    <explosionCellMote>ImpactMote</explosionCellMote>
    <makesAnimalsFlee>true</makesAnimalsFlee>
    <overkillPctToDestroyPart>0~0.7</overkillPctToDestroyPart>
    <explosionColorCenter>(1, 0.5, 0.3)</explosionColorCenter>
    <explosionColorEdge>(0.6, 0.5, 0.4)</explosionColorEdge>
    <soundExplosion>ImpactL</soundExplosion>
    <combatLogRules>Damage_Bomb</combatLogRules>
  </DamageDef>


  <DamageDef>
    <defName>Shredder</defName>
    <label>shred</label>
    <externalViolence>true</externalViolence>
    <workerClass>DamageWorker_AddInjury</workerClass>
    <isExplosive>true</isExplosive>
    <deathMessage>{0} has been shot to death.</deathMessage>
    <hediff>Shredded</hediff>
    <hediffSolid>Crack</hediffSolid>
    <harmAllLayersUntilOutside>true</harmAllLayersUntilOutside>
    <makesAnimalsFlee>true</makesAnimalsFlee>
    <impactSoundType>Bullet</impactSoundType>
    <armorCategory>Sharp</armorCategory>
    <minDamageToFragment>15</minDamageToFragment>
    <soundExplosion>RS_ShotSwarm</soundExplosion>
  </DamageDef>
  
  
  <DamageDef>
    <defName>MFlame</defName>
    <label>flame</label>
    <workerClass>DamageWorker_Stab</workerClass>
    <externalViolence>true</externalViolence>
    <deathMessage>{0} has been stabbed to death.</deathMessage>
    <hediff>Burn</hediff>
    <impactSoundType>Slice</impactSoundType>
    <armorCategory>Heat</armorCategory>
    <makesAnimalsFlee>true</makesAnimalsFlee>
    <stabChanceOfForcedInternal>0.6</stabChanceOfForcedInternal>
    <stabPierceBonus>2.5</stabPierceBonus>
  </DamageDef>
  
  
</Defs>