<?xml version="1.0" encoding="utf-8" ?>
<Defs>			
			
			<!-- ==========  Plasma Rifle Projectile =========== -->
			
			<ThingDef Class="CombatExtended.AmmoDef" Name="BasePlasmaRifleBullet" ParentName="BaseBullet" Abstract="true">
				<graphicData>
					<texPath>Things/Projectile/Plasma</texPath>
					<graphicClass>Graphic_Single</graphicClass>
				</graphicData>
				<projectile Class="CombatExtended.ProjectilePropertiesCE">
					<damageDef>Plasma</damageDef>
					<speed>40</speed>
					<dropsCasings>false</dropsCasings>
				</projectile>
			</ThingDef>

			<ThingDef Class="CombatExtended.AmmoDef" ParentName="BasePlasmaRifleBullet">
				<defName>Bullet_PlasmaRifle</defName>
				<thingClass>CombatExtended.ProjectileCE_Explosive</thingClass>
				<label>plasma sphere</label>
				<projectile Class="CombatExtended.ProjectilePropertiesCE">
					<damageAmountBase>15</damageAmountBase>
					<armorPenetrationBlunt>5</armorPenetrationBlunt>
					<armorPenetrationSharp>16</armorPenetrationSharp>
					<explosionRadius>1.5</explosionRadius>
				</projectile>
			</ThingDef>
			
			<!-- ==========  Plasma Bomb Projectile =========== -->

			<ThingDef Class="CombatExtended.AmmoDef" ParentName="BasePlasmaCasterBullet">
